generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:db.sqlite"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  avatar   String?
  admin    Boolean @default(false)

  flows   Flow[]
  buttons Button[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Flow {
  id      String @id @default(cuid())
  message String
  name    String

  userId    String
  createdBy User   @relation(fields: [userId], references: [id])

  buttons Button[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId], name: "name_createdBy")
}

model Button {
  id   String @id @default(cuid())
  name String

  userId    String
  createdBy User   @relation(fields: [userId], references: [id])

  flows Flow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, userId], name: "name_createdBy")
}
